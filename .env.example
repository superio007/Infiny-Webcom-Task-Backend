# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET_NAME=your_s3_bucket_name

# AWS Textract Configuration
TEXTRACT_MAX_RETRIES=3
TEXTRACT_TIMEOUT_MS=60000

# =============================================================================
# Google Gemini AI Configuration
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_RETRIES=1
GEMINI_TIMEOUT_MS=200000

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:5500/

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf

# =============================================================================
# Request Configuration
# =============================================================================
REQUEST_TIMEOUT_MS=180000
REQUEST_BODY_LIMIT=1mb

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# =============================================================================
# Security Configuration
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session/JWT (if implementing authentication)
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRY=24h

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
# Uncomment if using a database for job persistence
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
# Uncomment if using Redis for caching or job queues
# REDIS_URL=redis://host:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# =============================================================================
# Cleanup Configuration
# =============================================================================
CLEANUP_INTERVAL_MS=3600000
CLEANUP_RETENTION_HOURS=24
CLEANUP_FAILED_RETENTION_HOURS=72

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
# DATADOG_API_KEY=your_datadog_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================
# Allow older PDF versions for development/demo purposes (set to true to bypass PDF 1.4+ requirement)
ALLOW_LEGACY_PDF_VERSIONS=true
# Enable automatic PDF conversion to make legacy PDFs compatible with Textract
ENABLE_PDF_CONVERSION=true

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
ENABLE_API_DOCS=true
ENABLE_CLEANUP_SERVICE=true
ENABLE_METRICS=false